<% include ../partials/form %>

<form action="" method="post" class="data_form">
  <fieldset class="show">
    <label for="name">Select Activity:</label>
    <select class="dynamic" name="table_type">
      <option value="">Select</option>
      <% tables.forEach(function(table){ %>
      <option value="<%= table %>"><%= table %></option>
      <% }); %>
    </select>
  </fieldset>

  <fieldset class="activity models">
    <label for="datetime">Datetime:</label>
    <input type="datetime-local" name="datetime" />

    <label for="title">Title:</label>
    <input type="text" name="title" />

    <label for="category">Category:</label>
    <input type="text" name="category" />
  </fieldset>

  <fieldset class="Books models">
    <label for="author">Author:</label>
    <input type="text" name="author" />

    <label for="length">Length:</label>
    <input type="text" name="length" />
  </fieldset>

  <fieldset class="Checkins models">
    <h3>Not applicable</h3>
  </fieldset>

  <fieldset class="Citibikes models">
    <label for="start">Start:</label>
    <input type="text" name="start" />

    <label for="end">End:</label>
    <input type="text" name="end" />

    <label for="length">Length:</label>
    <input type="text" name="length" />
  </fieldset>

  <fieldset class="Cities models">
    <label for="state">State:</label>
    <input type="text" name="state" />

    <label for="length">Length (days):</label>
    <input type="text" name="length" />
  </fieldset>

  <fieldset class="Coffees models">
    <label for="length">Length (minutes):</label>
    <input type="text" name="length" />
  </fieldset>

  <fieldset class="Gyms models">
    <label for="studio">Studio:</label>
    <input type="text" name="studio" />
  </fieldset>

  <fieldset class="Flights models">
    <label for="airline">Airline:</label>
    <input type="text" name="airline" />

    <label for="arrive">Arrive:</label>
    <input type="text" name="arrive" />

    <label for="depart">Depart:</label>
    <input type="text" name="depart" />

    <label for="length">Length (hours):</label>
    <input type="text" name="length" />

    <label for="price">Price:</label>
    <input type="text" name="price" />
  </fieldset>

  <fieldset class="Mta models">
    <label for="price">Price:</label>
    <input type="text" name="price" />
  </fieldset>

  <fieldset class="Netflixes models">
    <label for="show">Show:</label>
    <input type="text" name="show" />

    <label for="episode_count">Episode count:</label>
    <input type="text" name="episode_count" />

    <label for="length">Length:</label>
    <input type="text" name="length" />
  </fieldset>

  <fieldset class="Runs models">
    <label for="distance">Distance:</label>
    <input type="text" name="distance" />

    <label for="pace">Pace:</label>
    <input type="text" name="pace" />

    <label for="time">Time:</label>
    <input type="text" name="time" />

    <label for="link">Link:</label>
    <input type="text" name="link" />
  </fieldset>

  <fieldset class="Sales models">
    <label for="app">App:</label>
    <input type="text" name="app" />

    <label for="price">Price:</label>
    <input type="text" name="price" />
  </fieldset>

  <fieldset class="Seamlesses models">
    <label for="price">Price:</label>
    <input type="text" name="price" />
  </fieldset>

  <fieldset class="Ubers models">

    <label for="start">Start:</label>
    <input type="text" name="start" />

    <label for="end">End:</label>
    <input type="text" name="end" />

    <label for="length">Length:</label>
    <input type="text" name="length" />

    <label for="price">Price:</label>
    <input type="text" name="price" />
  </fieldset>

  <br />
  <input class="show" type="submit" value="Submit manual entry" />
</form>

<% include ../partials/formlink %>

<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>

<script>
  $(".models").hide();
  $(".dynamic").on("change", function() {
    var table = $("." + $(this).val());
    $(".data_form").attr("action", "/data/models/" + $(this).val() + "/new");
    table.siblings().hide();
    $(".show, .activity").show();
    table.show();
  });

  $('form').submit(function() {
    $(':input', this).each(function() {
      this.disabled = !($(this).val());
    });
  });</script>